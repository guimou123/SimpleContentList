<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FactsListRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FactsListRow.Title">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/facts_list_row_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FactsListRow.Content">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/facts_list_row_content_text_size</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="FactsListRow.Image">
        <item name="android:layout_width">@dimen/facts_list_row_image_width</item>
        <item name="android:layout_height">@dimen/facts_list_row_image_height</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

</resources>
